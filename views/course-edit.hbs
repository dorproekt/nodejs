<h1>Редактировать курс {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название курса"></span>
    </div>

    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" required value="{{course.price}}">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">Картинка курса</label>
        <span class="helper-text" data-error="Введите картинку курса"></span>
    </div>

    <input name="id" type="hidden" value="{{course.id}}">

    <button class="btn btn-primary">Редактировать курс</button>
</form>